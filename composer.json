{
    "name": "ols-cpanel/whm-plugin",
    "description": "Modern OpenLiteSpeed integration for cPanel/WHM",
    "version": "2.0.0",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "OLS cPanel Team",
            "email": "support@ols-cpanel.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-curl": "*",
        "monolog/monolog": "^2.3",
        "symfony/console": "^5.4",
        "symfony/process": "^5.4",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "OLScPanel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OLScPanel\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
